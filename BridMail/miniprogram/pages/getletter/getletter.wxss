  left: 70rpx;
}

.userName{
  position: relative;
  top: 120rpx;
  left: 190rpx;
  width: 120px;
}
.icon{
width:25px !important;
height: 25px !important;
border-radius: 100%;
position: relative !important;
top: 13rpx;
left: -15rpx !important;
}
.reAuthor{
  position: relative;
  top: -40rpx;
  left: 145rpx;
  width: 70px;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important ;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.Date{
  position: absolute;
  top: 2vh;
  left: 60rpx;
  font-size: 18px;
}
.slContent{
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  width: 60%;
  height: 100%;
  display: flex;
  font-size: 18px;
  position: absolute;
  left: 70rpx;
}
.Content{
  position: relative;
  left: 130rpx;
  width: 400rpx;
  display:-webkit-box;
