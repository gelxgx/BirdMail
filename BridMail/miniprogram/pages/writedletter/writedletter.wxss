.comment{
  display:-webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
 position: absolute;
 top: 163rpx;
 left: 145rpx;
 width: 450rpx;
}
.flash{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 83vh;
  left: 590rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  z-index: 3;
  background-color: #b6804b;
  box-shadow: 2px 3px 13px  #b6804b;
}
.flash image{
  position: relative;
  top: -3rpx;
  width: 60rpx;
  height: 60rpx;
  transition: all ease-in 1s;
}
.van-loading{
  color:var(--loading-spinner-color,#c8c9cc) !important;
}

