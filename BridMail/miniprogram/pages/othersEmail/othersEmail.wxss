@import"../../utils/animate.wxss";
.scroll-view_H{
  background-image: url(https://6765-gelx-rntj2-1302013920.tcb.qcloud.la/images/bgwzz.jpg?sign=1ef74a706e5bd622ae7f2597e101ee70&t=1591811522);
  width: 100%;
  text-align: center;
  white-space: nowrap;
}
.scroll_item {
position: relative;
width: 84%;
margin: -1 1%;
left: -2%;
display: inline-block;
border-radius: 20rpx !important ;
overflow: hidden;
transform: scale(0.9);
vertical-align: top;
top: 4%;
height: 80%;
}
.scroll_item:first-child{
  margin-left: 8%;
  transform: scale(1);
  left: 0;
}
.scroll_item:last-child{
  margin-right: 8%;
   left: 0;
}
.scroll_item.selected{
   transform: scale(1);
}
.scroll_item .proImg{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
  position: absolute;
  top: -50rpx;
  left: 0;
  z-index: 0;
}
.scroll_item image {
  width: 100%;
  float: left;
}
.detailBox {
  padding: 30rpx 5% 30rpx 5%;
  float: left;
  width: 90%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  background: #fff;
}
.proTitle {
  font-size: 36rpx;
  color: #666;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.proDec {
  font-size: 30rpx;
  color: #999;
  line-height: 50rpx;
}
.proPrice {
  font-size: 48rpx;
  color: #CA414C;
  line-height: 90rpx;
}
.detailLink{
  color: #666;
  font-size: 30rpx;
}
.none{
  position: absolute;
  left: 5%;
  top: 170px;
  width: 90%;
  height: 240rpx;
  justify-content: center;
  background-color: rgba(245, 245, 245, 0.5);
  border-radius: 10px;
  margin-bottom: 25px;
  display: flex;
  align-items: center;
}
.noneText{
line-height: 240rpx;
font-size: 25px;
}
.content{
  position: relative;
  top: 15vh;
  width: 500rpx;
  height: 400rpx;
  left: 70rpx;
}
.Date{
position: absolute;
top: 280rpx;
left: 330rpx;
}
.text{
  position: absolute;
  top: 9vh;
  left: 70rpx;
  width: 190px;
  display:-webkit-box;
  overflow: hidden;
  text-indent: 34px;
  font-size: 17px;
  text-overflow: ellipsis;
  white-space: normal !important ;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: left;
}
.user{
position: absolute;
top: 800rpx;
left: 55rpx;
font-size: 16px;
}
.icon{
  width: 35px !important;
  height: 35px;
  position: absolute;
  top: 5vh;
  left: 0rpx;
  border-radius: 100%;
}
.author{
  position: absolute;
  top: 6vh;
  left: 80rpx;
  font-size: 14px;
}
.flash{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 83vh;
  left: 590rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  z-index: 3;
  background-color:	#FFE4C4;
  box-shadow: 2px 3px 13px  #b6804b;
}
.flash image{
  position: relative;
  top: -3rpx;
  width: 60rpx;
  height: 60rpx;
  transition: all ease-in 1s;
}
.van-loading{
  color:var(--loading-spinner-color,black) !important;
}